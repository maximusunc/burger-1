<div class = 'container'>
	{{!-- <div class='row'> --}}
		{{!-- <h1 class='header col-sm-4 col-sm-offset-4'>Bob's Burgers</h1> --}}
		{{!-- <div class = 'col-sm-4 col-sm-offset-4'> --}}
			{{!-- <img id="burger-img" src = "../../assets/img/burger.png"> --}}
		{{!-- </div> --}}
	{{!-- </div> --}}
	<div class = 'row'>
		<div class = 'col-sm-4'>
			<h3 id='uneatenHeader'>Burger of the day.    </h3>
			<ul id = 'uneatenList'>
				{{#each burgers}}
					{{#unless devoured}}
						{{>burgers/burger-block devoured = false}}
					{{/unless}}
				{{/each}}		
			</ul>
		</div>

		<div class = 'col-sm-4'>
			<h1 id= 'textAreaHeader'>Please submit your burger of the day!</h1>
			<textarea id="newBurger" class= 'textArea' placeholder="Type your burger pun here." style = "width: 100%; height: 40px"></textarea>
			<button type="submit" id="submit" class='btn btn-submit'>Submit</button>
		</div>
		<div class= 'col-sm-4'  id='eaten'>
			<h3 id='eatenHeader'>Eaten Burgers</h3>
			<ul id = 'eatenList'>
				{{#each burgers}}
					{{#if devoured}}
						{{>burgers/burger-block devoured = true}}
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>
</div>


