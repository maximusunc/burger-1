<div class = 'container'>
	<div class = 'row' id='main'>
		<div class = 'col-sm-4' id='uneaten'>
			<h1 id='uneatenHeader'>Burger of the day.</h1>
			<ul id = 'uneatenList'>
				{{#each burgers}}
					{{#unless devoured}}
						{{>burgers/burger-block devoured = false}}
					{{/unless}}
				{{/each}}		
			</ul>
		</div>

		<div class = 'col-sm-4' id='inputArea'>
			<h1 id= 'textAreaHeader'>Please submit your burger of the day!</h1>
			<textarea id="newBurger" class= 'textArea' placeholder="Type your burger pun here." style = "width: 100%; height: 120px"></textarea>
			<button type="submit" id="submit" class='btn btn-submit'>Submit</button>
		</div>
		<div class= 'col-sm-4' id='eaten'>
			<h1 id='eatenHeader'>Burgers eaten!</h1>
			<ul id = 'eatenList'>
				{{#each burgers}}
					{{#if devoured}}
						{{>burgers/burger-block devoured = true}}
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>
</div>


